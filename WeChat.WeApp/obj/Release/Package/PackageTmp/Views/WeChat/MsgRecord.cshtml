function showtw(id) {
    $.post("GetTW.do", {
        id: id
    },
        function (ret) {
            if (ret && ret.status == 0) {
                $("#MSGTYPE").val("news");
                $("#tuwenid").show();
                $("#area0").hide();
                $("#biaoqing").hide();
                $("#divyl").hide();
                $("#tuwenid").html(ret.data);
            }
            else {
                _showInfoMessage("加载失败！", 'error');
            }
        },
        "json"
  );
}

function txtedit()
{
    $("#MSGTYPE").val("text");
    $("#tuwenid").hide();
    $("#area0").show();
