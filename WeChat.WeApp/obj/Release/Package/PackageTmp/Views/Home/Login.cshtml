        var options = {
            loginUrl: "@Url.Action("Login")"
        };

        $("#btnReset").click(function (e) {
            $("#USER_NO").val("");
            $("#USER_PASS").val("");
        });

        $("#btnLogin").click(function (e) {
            $("#frmLogin").submit();
        });

        $('#USER_PASS').keydown(function (e) {
            if (e.keyCode == 13) {
                $("#frmLogin").submit();
            }
        });

        $('#USER_NO').keydown(function (e) {
            if (e.keyCode == 13) {
                $("#frmLogin").submit();
            }
        });

        $('#frmLogin').validator({
            rules: {
            },
            fields: {
                //'#ORG_NO': 'required',
                '#USER_NO': 'required',
                '#USER_PASS': 'required',
            },
            valid: function (form) {

                FormSubmit(form, function (res) {
                    if (res && res.Status == -1) {
                        alert('用户名或密码有误！');
                    }
                    else {
                        //if ($.cookie("LoginOrgNo") == null || $.cookie("LoginOrgNo") == "") {
                        //    $.cookie("LoginOrgNo", $("#ORG_NO").val(), { expires: 120 });
