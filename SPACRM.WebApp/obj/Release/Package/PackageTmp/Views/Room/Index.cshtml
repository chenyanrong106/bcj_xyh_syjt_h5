@{
    ViewBag.Title = "房间管理";
    var ISADMIN = ViewData["ISADMIN"];
    var orgId = ViewData["ORG_ID"] == null ? "0" : ViewData["ORG_ID"].ToString();
    var store = ViewData["store"] == null ? "0" : ViewData["store"].ToString();
    var regionid = ViewData["region_id"] == null ? "0" : ViewData["region_id"].ToString();
}
@model SPACRM.Entity.Entities.STORE_ROOM_EX
@section htmlhead{
   
    @Html.Css("plugin/xjgrid", "plugin/xjdailog", "plugin/validator", "plugin/tip", "common")
    <style type="text/css">
        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .searchpanel {
            background-color: #f7f8fa; /*border: 1px solid #ccc;*/
            padding: 5px 15px;
            margin-left: 10px;
            border-radius: 4px;
        }

            .searchpanel .form-group label {
                margin-bottom: 4px;
            }
    </style>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-home"></i>房间管理</h2>
    </div>
    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4>房间列表
            </h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <div class="row">
                <div class="col-md-2 form-group">
                    <button type="button" class="btn default" id="btnAdd">
                        <i class="fa fa-plus"></i> 新 增</button>
                </div>
                <div class="text-right col-md-10">
                    <form id="formQuery" class="form-inline" role="form">
                          <div class="form-group">
                       @Html.ResourceDropDownList("STORE_ID", "LoginStore", "门店名称", new { @class = "form-control",style="width:170px;" },orgId,regionid,store,false) @*服务类别*@            
                                                                                                                          
                    </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="房间名称" id="RoomName" name="RoomName" />
                            <div class="btn-group">
                                <button class="btn-primary btn"><i class="fa fa-search"></i> 查 询</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-12">
                    <div id="gridlist">
                    </div>
                </div>
            </div>
        </div>
                
        <div id="confirmModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">确认！</h4>
                    </div>
                    <div>
                    </div>
                    <div class="modal-body">
                        <p>你确认要删除房间 [ <span id="lbuserName"></span>] 吗？</p>
                        <input id="hdCurrentId" type="hidden" value="" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                        <button type="button" id="btnConfirm" class="btn btn-primary">确 定</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

        <div id="EditModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">房间信息维护</h4>
                    </div>
                      @Html.Hidden("ISADMIN",ISADMIN) 
                    <div class="modal-body">
                        <form class="form-horizontal" id="frmSave" method="post" action="@Url.Action("Save")" role="form">
                            @Html.Hidden("ID", Model.ID) 
                             <div class="form-group">
                                <label class="col-sm-3 control-label">房间编号:</label>
                                <div class="col-sm-6">
                                   @Html.TextBox("ROOM_NO", Model.ROOM_NO, new { @class = "form-control", placeholder = "请输入房间编号", maxlength = "10", required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">房间名称:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("NAME", Model.NAME, new { @class = "form-control", placeholder = "请输入房间名称", maxlength = "10", required = "required" })
                                </div>
                                <div class="col-sm-3">
                                    <p class="help-block" style="color: red;"></p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">床位数:</label>
                                <div class="col-sm-6">
                                    <input type="text" id="BED_NUM" name="BED_NUM" value="@Model.BED_NUM" class="form-control" placeholder="请输入床位数" >
                                </div>
                            </div>

                            <div class="form-group" id="storeDiv">
                                <label class="col-sm-3 control-label">门店:</label>
                                <div class="col-sm-6">
                                    @Html.ResourceDropDownList("STORE_ID", "STORE", Model.STORE_ID, new { @class = "form-control" }, orgId.ToString(), false)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label">说明:</label>
                                <div class="col-sm-6">
                                    @Html.TextArea("REMARK", Model.REMARK, new { @class = "form-control", placeholder = "请输入说明信息" })
                                </div>
                            </div>
                        </form>
                        <div class="modal-footer">
                            <button type="button" id="btnSave" class="btn btn-primary">确 定</button>
                            <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">取 消</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            listUrl: "@Url.Action("List")",
            editUrl: "@Url.Action("Edit")",
            deleteUrl: "@Url.Action("Delete")"
        };
    </script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog", "plugins/validator/validator", "plugins/datatables/jquery.dataTables.min", "plugins/datatables/dataTables.bootstrap", "plugins/form-inputmask/jquery.inputmask.bundle.min.js'", "demo/demo-datatables", "app/room/index") 
    
}
