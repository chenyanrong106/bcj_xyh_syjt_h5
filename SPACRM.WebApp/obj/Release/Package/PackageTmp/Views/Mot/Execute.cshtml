                <div class="options">
                    <a class="panel-collapse" href="#"><i class="fa fa-chevron-down"></i></a>
                </div>
            </div>
            <div class="panel-body">
                    <table  width="480" border="1" align="center" cellpadding="0" cellspacing="0" class="tableborder">
                          <tr><th  >选择</th><th>策略名称</th><th>成功案列</th></tr>
                          <tr><td  ><input  type="radio" checked="checked" name="1" /></td><td>策略1</td><td><a>王晓成功案列.pdf</a></td></tr>
                          <tr><td  ><input  type="radio"  name="1"/></td><td>策略2</td><td><a>lee解决策略案列.pdf</a></td></tr>
                           <tr><td  ><input  type="radio"  name="1"/></td><td>策略3</td><td><a>ed解决策略案列.pdf</a></td></tr>
