<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-tasks"></i> MOT策略管理</h2>
    </div>    
        <div id="mainbody" class="panel panel-primary">
            <div class="panel-heading">
                <h4>
                MOT策略管理
                </h4>
            </div>
            <div class="panel-body" style="min-height: 350px">
                 <div class="row">
                <div class="col-md-2 form-group">
                    <button type="button" class="btn default" id="btnAdd">
                        <i class="fa fa-plus"></i> 新 增</button>
                </div>


                      <div class="text-right col-md-10">
                
                <form id="formQuery"  class="form-inline" role="form">
                   
                     <div class="form-group">
                      <input type="text" class="form-control" placeholder="请输入策略名称" id="NAME" name="NAME" />

                        <select class="form-control" id="PRO_TYPE" name="SONTYPE">
                            <option value="">请选择策略类型</option>
                             <option value="">短信</option>
                             <option value="">电话</option>
                             <option value="">邮件</option>
                        </select>                       
                   
                          <div class="btn-group">
                           <button class="btn-primary btn"><i class="fa fa-search"></i> 查 询</button>
                        </div>      
                    </div>
             
                </form>
                </div>
                <div class="col-md-12">
                    <div >
                          
                        
                        <table  width="1050" border="1" align="center" cellpadding="0" cellspacing="0" class="tableborder">
                            <tr><th  >策略名称</th><th>版本号</th><th>策略类型</th><th>策略描述</th><th>创建人</th><th>创建日期</th><th>操作</th></tr>
