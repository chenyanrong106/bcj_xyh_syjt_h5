                              <tr><td  >策略2</td><td>1.0</td><td>邮件</td><td>情况紧急</td><td>门店前台</td><td>2014-08-08</td><td><a href="#" id="x2">修改</a> <a id="d2">删除</a></td></tr>
                              <tr><td  >策略3</td><td>1.1</td><td>短信</td><td>情况紧急</td><td>门店前台</td><td>2014-08-08 </td><td><a href="#" id="x3">修改</a> <a id="d3">删除</a></td></tr>
                              <tr><td  >策略4</td><td>1.2</td><td>电话</td><td>情况紧急</td><td>门店前台</td><td>2014-08-08 </td><td><a href="#" id="x4">修改</a> <a id="d4">删除</a></td></tr>
                              <tr><td  >策略5</td><td>1.3</td><td>短信</td><td>情况紧急</td><td>门店前台</td><td>2014-08-08 </td><td><a href="#" id="x5">修改</a> <a id="d5">删除</a></td></tr>

                        
                        </table>
                    </div>
                </div>
            </div>

    
            </div>


<div id="EditModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">策略信息维护</h4>
            </div>
            <div>
            </div>
            <div class="modal-body">
                 <form class="form-horizontal" id="frmSave" method="post" action="@Url.Action("PostSave")" role="form">
                          
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><span style="color: red">*</span>策略名称:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("PROD_SKU", "", new { @class = "form-control", placeholder = "请输入策略名称", maxlength = "10", required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><span style="color: red">*</span>版本号:</label>
                                <div class="col-sm-6">
                                      @Html.TextBox("PROD_NAME", "", new { @class = "form-control", placeholder = "请输入策略版本号", maxlength = "10", required = "required" })
                                </div>
                                <div class="col-sm-3">
                                    <p class="help-block" style="color: red;"></p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label"><span style="color: red">*</span>策略类型:</label>
                                 
                                <div class="col-sm-6">
                                    <select class="form-control" name="SONTYPE">
                            <option value="">请选择策略类型</option>
                             <option value="">短信</option>
                             <option value="">电话</option>
                             <option value="">邮件</option>
                         </select>                                         
                                </div>
                            </div>

                         <div class="form-group">
                                <label class="col-sm-3 control-label"><span style="color: red">*</span>策略描述:</label>
                                <div class="col-sm-6">
                                      @Html.TextBox("PROD_NAME", "", new { @class = "form-control", placeholder = "请输入策略描述", maxlength = "10", required = "required" })
                                </div>
                                <div class="col-sm-3">
                                    <p class="help-block" style="color: red;"></p>
                                </div>
                            </div>

                         <div class="form-group">
                                <label class="col-sm-3 control-label"><span style="color: red">*</span>创建人:</label>
                                <div class="col-sm-6">
                                      @Html.TextBox("PROD_NAME", "", new { @class = "form-control", placeholder = "请输入创建人", maxlength = "10", required = "required" })
                                </div>
                                <div class="col-sm-3">
                                    <p class="help-block" style="color: red;"></p>
                                </div>
                            </div>
                     </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <button type="button" id="btnConfirm" class="btn btn-primary">确 定</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

 <div id="confirmModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            &times;</button>
                        <h4 class="modal-title">
                            确认！</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            你确认要删除策略吗？</p>
                        <input id="hdCurrentId" type="hidden" value="" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">
                            取 消</button>
                        <button type="button" id="btnConfirm" class="btn btn-primary">
                            确 定</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

<!-- /.modal -->
        </div>
    </div>
