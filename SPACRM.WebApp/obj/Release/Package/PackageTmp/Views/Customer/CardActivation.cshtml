@{
    ViewBag.Title = "未记名卡激活";
}
@section htmlhead{

    @Html.Css("plugin/validator")
    <style type="text/css">
        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .btnpanel_right {
            float: right;
        }

        .btnpanel {
            text-align: center;
        }

        .col-sm-8 {
            padding: 0;
        }

        .filter_panel {
        }
    </style>
}

<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-home"></i>未记名卡激活</h2>
    </div>

    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4></h4>
        </div>

        <div class="panel-body" style="min-height: 350px">
            <div class="row">
                <form id="frmEdit" action="@Url.Action("SaveCardActivation")" method="post" role="form"  class="form-horizontal">

                    <br />
                    <div class="form-group">
                        <label for="CardNO" class="col-sm-2 control-label">卡 号:</label>
                        <div class="col-sm-3">
                            @Html.TextBox("CARD_NO", "", new { @class = "form-control", placeholder = "请输入激活卡号" })
                        </div>
                        <div>
                            <button type="button" class="btn-primary btn" id="btnGainCard"><i class="fa fa-search"></i>查 询</button>
                            <span id="spanError" style="color: red; visibility: hidden;"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CardStatus" class="col-sm-2 control-label">购卡时间:</label>
                        <div class="col-sm-3">
                            <span id="spanOpenCardTime"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CardStatus" class="col-sm-2 control-label">记名状态:</label>
                        <div class="col-sm-3">
                            <span id="spanCardStatus"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CustName" class="col-sm-2 control-label">姓 名:</label>
                        <div class="col-sm-3">
                            @Html.TextBox("NAME", "", new { @class = "form-control", placeholder = "请输入姓名" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="CustMobile" class="col-sm-2 control-label">手机号:</label>
                        <div class="col-sm-3">
                            @Html.TextBox("MOBILE", "", new { @class = "form-control", placeholder = "请输入手机号" })
                        </div>
                    </div>

                    @Html.Hidden("ID")
                </form>
                <div class="modal-footer">
                    <button type="button" id="btnSave" class="btn btn-primary">激 活</button>
                    <button type="button" id="btnReturn" class="btn btn-default" data-dismiss="modal">返 回</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            getCustUrl: "@Url.Action("GetCustByCardNO")",
            indexUrl: "@Url.Action("Index")",
            view360Url: "@Url.Action("View360")"
        };
    </script>
    @Html.Js("plugins/validator/validator", "app/customer/CardActivation")

}
