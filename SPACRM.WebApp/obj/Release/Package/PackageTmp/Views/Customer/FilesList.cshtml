@{
    ViewBag.Title = "FilesList";
    Layout = "~/Views/Shared/_LayoutB.cshtml";

}
@*@model SPACRM.Entity.Customer360*@
@section htmlhead{
    @Html.Css("plugin/xjgrid", "plugin/xjdailog")
}

<form action="upload.do?cid=@Model.BaseInfo.ID" enctype="multipart/form-data" method="post" class="form-horizontal row-border">
    <div class="form-group">
        <label class="col-sm-2 control-label">文件类型</label>
        <div class="col-sm-9">
           
             @Html.ResourceDropDownList("filetype", "File_Type", "", new { @class = "form-control" })
        </div>
    </div>
     <div class="form-group">
        <label class="col-sm-2 control-label">文件名称</label>
        <div class="col-sm-9">
            @Html.TextBox("filename", "", new { style="width:100%"})
            </div>
         </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">选择文件</label>
        <div class="col-sm-7">
            <input type="file" name="file1 " class="form-control" />
        </div>
        <div class="col-sm-2">
            <input type="submit" id="sc" class="btn btn-primary pull-right" value="文件上传" />
        </div>
    </div>

</form>
<div class="table-responsive" id="gridlist">
</div>
@section jssection{
    <script type="text/javascript"> var util = {}; var options = {
     linkUrl: "@Url.Action("QueryFileList", "customer", new { CUST_ID = Request.QueryString["cid"] })"
 }; </script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog", "app/customer/fileslist")
}
