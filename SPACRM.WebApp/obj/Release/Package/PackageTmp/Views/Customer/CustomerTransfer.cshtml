@{
    ViewBag.Title = "会员转账";
}
@section htmlhead{

    @Html.Css("plugin/validator")
    <style type="text/css">
        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .searchpanel {
            background-color: #f7f8fa; /*border: 1px solid #ccc;*/
            padding: 5px 15px;
            margin-left: 10px;
            border-radius: 4px;
        }

            .searchpanel .form-group label {
                margin-bottom: 4px;
            }

        .divHead {
            height: 25px;
            margin-bottom: 8px;
            background-color: #FCF3D0;
            border: 1px solid #F7DC6F;
            color: #927608;
        }
    </style>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-home"></i>会员转账</h2>
    </div>
    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4></h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <div class="row">
                <input type="hidden" id="outcid" name="outcid" />
                <input type="hidden" id="incid" name="incid" />
                <input type="hidden" id="CUST_ID_OUT" name="CUST_ID_OUT" />
                <input type="hidden" id="CUST_ID_IN" name="CUST_ID_IN" />
                <div>
                    <div class="col-md-12">
                        <div class="divHead">&nbsp;请输入转出会员</div>
                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">会员卡号:</label>
                            <div class="col-sm-6 input-group">
                                @Html.TextBox("CardNoOut", Request.QueryString["cno"] == null ? "" : Request.QueryString["cno"], new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">密 码:</label>

                            <div class="col-sm-6 input-group">
                                @Html.TextBox("Password", null, new { type = "password", @class = "form-control", style = "width:173px;" })
                                <button class="btn-primary btn" id="btnSearchOut"><i class="fa fa-search"></i>查 询</button>
                            </div>
                        </div>

                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">会员卡级:</label>

                            <div class="col-sm-6 input-group">
                                <select id="CardType" name="selectlink" class="form-control">
                                    <option value="0">--请选择会员卡级--</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">会员姓名:</label>

                            <div class="col-sm-6 input-group">
                                <input name="CUST_NAME_OUT" id="CUST_NAME_OUT" type="text" readonly="readonly" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">总存款额:</label>

                            <div class="col-sm-6 input-group">
                                <input name="PAR_AMT_OUT" id="PAR_AMT_OUT" type="text" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">卡内余额:</label>

                            <div class="col-sm-6 input-group">
                                <input name="BALANCE_OUT" id="BALANCE_OUT" type="text" readonly="readonly" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group col-xs-6">
                            <label class="col-sm-2 control-label">转出金额:</label>

                            <div class="col-sm-6 input-group">
                                <input name="TransferAmt" id="TRANSFERAMT" maxlength="8" type="text" onkeypress="util.keyPress(this)" onkeyup="util.keyUpLCPayment(this)" onblur="util.onBlur(this)" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div style="margin-top: 10px;">
                            <div class="divHead">&nbsp;请输入转入会员</div>

                            <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label">会员卡号:</label>

                                <div class="col-sm-6 input-group">
                                    @Html.TextBox("CardNoIn", "", new { @class = "form-control",style = "width:173px;" })
                                    <button class="btn-primary btn" id="btnSearchIn"><i class="fa fa-search"></i>查 询</button>
                                </div>
                            </div>
                           @* <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label"></label>
                                <div class="col-sm-6 input-group">
                                </div>
                            </div>*@
                            <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label">会员卡级:</label>

                                <div class="col-sm-6 input-group">
                                    <select id="CardType_IN" name="selectlink" class="form-control">
                                        <option value="0">--请选择会员卡级--</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label">会员姓名:</label>

                                <div class="col-sm-6 input-group">
                                    <input name="CUST_NAME_IN" id="CUST_NAME_IN" type="text" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label">会员电话:</label>

                                <div class="col-sm-6 input-group">
                                    <input name="CUST_NO_IN" id="CUST_NO_IN" type="text" readonly="readonly" class="form-control" />
                                </div>
                            </div>



                            <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label">总存款额:</label>

                                <div class="col-sm-6 input-group">
                                    <input name="PAR_AMT_IN" id="PAR_AMT_IN" type="text" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group col-xs-6">
                                <label class="col-sm-2 control-label">卡内余额:</label>

                                <div class="col-sm-6 input-group">
                                    <input name="BALANCE_IN" id="BALANCE_IN" type="text" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group btnpanel_right" style="margin-top: 5px;">

                    <button type="button" id="btnSave" class="btn btn-primary">保存</button>
                    <button type="button" id="btnReturn" class="btn btn-default">返回</button>
                </div>
            </div>
        </div>

    </div>
</div>

@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            listUrl: "@Url.Action("List")",
            editUrl: "@Url.Action("Edit")",
            deleteUrl: "@Url.Action("Delete")",
            transferUrl: "@Url.Action("CardTransferSave")"
        };
    </script>
    @Html.Js("plugins/validator/validator", "app/customer/customertransfer")

}
