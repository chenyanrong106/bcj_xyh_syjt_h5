@{
    ViewBag.Title = "挂失/补卡";
    Layout = "~/Views/Shared/_LayoutB.cshtml";
}
@model SPACRM.Entity.CUST_INFO
@section htmlhead{
    @Html.Css("plugin/validator")
    <style type="text/css">
        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .col-sm-8 {
            padding: 0;
        }
    </style>
}

<div style="margin: -2px 15px;">
    <div id="h_title" class="h_title">挂失/补卡</div>
    <div>
        <form id="frmMakeUpCardSave" action="@Url.Action("MakeUpCardSave")" method="post" role="form">
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="ORG_NAME">顾客姓名：</label>
                    <div class="col-xs-7">
                        <span id="spanCUST_NAME">@Model.NAME</span>
                        <input type="hidden" id="CUST_ID" name="ID" value="@Model.ID" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="ORG_NAME">手机号码：</label>
                    <div class="col-xs-7">
                        <span id="spanPHONE">@Model.MOBILE</span>

                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="BRAND">会员卡号：</label>
                    <div class="col-xs-7">

                        <label>@Model.CARD_NO</label>
                        <input type="hidden" name="OLD_CARD_NO" value="@Model.CARD_NO" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="MANAGER">旧密码：</label>
                    <div class="col-xs-7">
                        @Html.TextBox("OLD_PASSWORD", "", new { @class = "form-control", type = "password", maxlength = "8" })

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="MANAGER">新卡号：</label>
                    <div class="col-xs-7">
                        @Html.TextBox("CARD_NO", "", new { @class = "form-control", maxlength = "18" })

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="MANAGER">新密码：</label>
                    <div class="col-xs-7">
                        @Html.TextBox("PASSWORD", "", new { @class = "form-control", type = "password", maxlength = "8" })

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-xs-3 control-label" for="MANAGER">补卡费用：</label>
                    <div class="col-xs-7">
                        @Html.TextBox("BUY_MONEY", "", new { @class = "form-control", maxlength = "8" })
                    </div>
                </div>
            </div>

            <div class="btnpanel_right">
                <button type="reset" id="btnCancel" class="btn btn-default">取 消  </button>
                @if (Model.STATUS == 2)
                {
                    <button type="button" id="btnReissue" class="btn btn-primary">补 卡  </button>
                    <button type="button" id="btnThaw" class="btn btn-primary">解 冻  </button>
                    <button type="button" disabled="disabled" class="btn btn-default">已挂失</button>
                }
                else if (Model.STATUS == 1)
                {
                    <button type="button" id="btnLost" class="btn btn-primary">挂 失  </button>
                }
            </div>
            <div id="confirmModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">确认！</h4>
                        </div>
                        <div>
                        </div>
                        <div class="modal-body">
                            <p>是否确定要<span id="lbcaozuo"></span>操作？</p>
                            <input id="hdCurrentId" type="hidden" value="" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                            <button type="button" id="btnConfirm" class="btn btn-primary">确 定</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <input type="hidden" id="hideStatus" name="STATUS" />


        </form>
    </div>
</div>
@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {

        };
    </script>
    @Html.Js("plugins/validator/validator", "app/customer/makeupcard")
}
