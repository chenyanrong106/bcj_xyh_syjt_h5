@{
    Layout = "~/Views/Shared/_LayoutB.cshtml";
    ViewBag.Title = "Certificatelist";
}

@model SPACRM.Entity.Customer360
@section htmlhead{
    @Html.Css("plugin/xjgrid", "plugin/xjdailog", "view360")
}
<div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive" id="gridlist">
            </div>
        </div>
    </div>
</div>


<div id="confirmModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="frmEdit" method="post" role="form">

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h4>详细信息</h4>
                            </div>
                            <div style="background-color: white;">
                                <div id="tab-content" class="tab-content">
                                    <div class="tab-pane active" id="spro">

                                        <div id="serGridlist" style="overflow: auto; overflow-x: hidden;">
                                            <div class="list-group">
                                                <!--begin-->
                                                <div style="height: 300px;">
                                                    <div  class="form-group col-xs-10"></div>
                                                    <div class="form-group col-xs-10">
                                                        <label class="col-sm-2 control-label" for="BUY_AMT">发放门店:</label>
                                                        <div class="col-sm-10 input-group">
                                                            <input type="text" name="STORE_NAME" id="STORE_NAME" class = "form-control"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-xs-10">
                                                        <label class="col-sm-2 control-label" for="BUY_AMT">赠券编号:</label>
                                                        <div class="col-sm-10 input-group">
                                                            <input type="text" name="VOUCHER_NO" id="VOUCHER_NO" class = "form-control"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-xs-10">
                                                        <label class="col-sm-2 control-label" for="BUY_AMT">失效日期:</label>
                                                        <div class="col-sm-10 input-group">
                                                            <input type="text" name="INVALID_DATE" id="INVALID_DATE" class = "form-control"/>
                                                        </div>
                                                    </div>
                                                  @*  <div class="form-group col-xs-10">
                                                        <label class="col-sm-2 control-label" for="BUY_AMT">可使用门店:</label>
                                                        <div class="col-sm-10 input-group">
                                                            <input type="text" name="USER_STORES" id="USER_STORES" class = "form-control"/>
                                                        </div>
                                                    </div>*@
                                                    <div class="form-group col-xs-10" >
                                                        <label class="col-sm-2 control-label" for="YH_AMT">使用门店:</label>
                                                        <div class="col-sm-10 input-group">
                                                            <input type="text" name="USED_STORE_ID" id="USED_STORE_ID" class = "form-control"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-xs-10" >@*当"还需支付金额"为负数时 此处才可见*@
                                                        <label class="col-sm-2 control-label" for="YH_AMT">使用日期:</label>
                                                        <div class="col-sm-10 input-group">
                                                            <input type="text" name="USED_TIME" id="USED_TIME" class = "form-control"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group col-xs-10">
                                                        <label class="col-sm-2 control-label" for="REMARK">备注信息:</label>
                                                        <div class="col-sm-10 input-group">
                                                            @Html.TextArea("REMARK", "", new { @class = "form-control", placeholder = "备注信息", style = "resize:none;" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>



                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section jssection{
    <script type="text/javascript"> var util = {}; var options = {
     linkUrl: "@Url.Action("GetCertiFicateList", "Customer", new { cid = Request.QueryString["cid"] })",
     ViewDetailInfo: "@Url.Action("PromotionDetailInfo")"
 }; </script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog", "app/customer/Certificatelist")
}
