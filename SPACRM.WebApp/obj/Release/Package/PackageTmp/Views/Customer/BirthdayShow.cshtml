@{
    ViewBag.Title = "会员生日名册";
    var orgId = ViewData["ORG_ID"] == null ? "0" : ViewData["ORG_ID"].ToString();
    var store = ViewData["store"] == null ? "0" : ViewData["store"].ToString();
    var regionid = ViewData["region_id"] == null ? "0" : ViewData["region_id"].ToString();

    var beginDate = Request.Cookies["BEGIN_DATE"] == null ? DateTime.Now.ToString("yyyy-MM-dd") : Request.Cookies["BEGIN_DATE"].Value;
    var endDate = Request.Cookies["END_DATE"] == null ? DateTime.Now.ToString("yyyy-MM-dd") : Request.Cookies["END_DATE"].Value;
    var storeId = Request.Cookies["STORE"] == null ? "" : Request.Cookies["STORE"].Value;
}
@section htmlhead{
    @Html.Css("plugin/validator", "plugin/xjgrid", "plugin/xjdailog")
    <style type="text/css">
        .h_title
        {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }
        
        .searchpanel
        {
            background-color: #f7f8fa; /*border: 1px solid #ccc;*/
            padding: 5px 15px;
            margin-left: 10px;
            border-radius: 4px;
        }
        
        
        .searchpanel .form-group label
        {
            margin-bottom: 4px;
        }
        
        #SearchBox
        {
            width: 200px;
        }
    </style>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-group"></i>会员生日名册</h2>
    </div>
    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4>会员生日名册
            </h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <div class="row">
                <form class="form-inline" role="form" id="formQuery">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="输入姓名,手机号查询" id="CUST_NAME" name="NAME"
                            style="width: 170px;" />
                    </div>
                    <div class="form-group">
                        @Html.ResourceDropDownList("STORE_ID", "LoginStore2", "门店名称", new { @class = "form-control" }, orgId, regionid, store, false)
                    </div>
                    <div class="form-group">
                        <div class="text-left btn-group">
                            <button class="btn-primary btn">
                                <i class="fa fa-search"></i>查 询</button>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("导出excel", "BirthdayRptExcel", new { @style = "color:white;", BEGIN_DATE = beginDate, END_DATE = endDate, STORE = storeId }, "")
                    </div>
                    <div class="text-right col-md-4 form-group">
                        <div class="col-sm-12 input-group date" id="birthday_picker">
                            @Html.TextBox("BEGIN_DATE", DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "form-control" })
                            <span class="input-group-addon">to</span>
                            @Html.TextBox("END_DATE", DateTime.Now.ToString("yyyy-MM-dd"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                </form>
                <div class="col-md-12">
                    <div class="table-responsive" id="gridlist">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            listUrl: "@Url.Action("BirthdayShowList")",
            view360Url: "@Url.Action("View360")"
        };

    </script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/form-datepicker/js/bootstrap-datepicker",
    "plugins/form-datepicker/js/locales/bootstrap-datepicker.zh-CN", "app/customer/BirthdayShow")
}
