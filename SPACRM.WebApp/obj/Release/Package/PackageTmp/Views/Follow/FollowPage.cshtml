@{
    ViewBag.Title = "FollowPage";
    Layout = "~/Views/Shared/_LayoutB.cshtml";
}
@model SPACRM.Entity.Entities.CUST_FOLLOW_EX
@using SPACRM.Entity
@section htmlhead{
    @Html.Css("view360", "plugin/xjdailog")
    <style type="text/css">
        th
        {
            text-align: center;
            height: 35px;
        }

        td
        {
            text-align: center;
            height: 35px;
        }
    </style>
}

<div class="s_container">

    <div id="mainbody" class="">
        <div class="">
            <div class="row">
                <!--左侧开始-->
                <div class="col-sm-3" style="padding-top:10px;">

                    <div class="l-box">
                        <div class="l-box-title">
                            会员情况
                        </div>
                        <div class="l-box-item l-box-shoping">
                            客户名称:@Model.CUST_NAME
                        </div>
                        <div class="l-box-item l-box-shoping">
                            会员卡号:@Model.CARD_NO
                        </div>
                        <div class="l-box-item l-box-shoping">
                            客户性别:@Model.GENDER
                        </div>
                        <div class="l-box-item l-box-shoping">
                            客户电话:@Model.MOBILE
                        </div>

                    </div>

                    <div class="l-box">
                        <div class="l-box-title">
                            消费情况
                        </div>
                        <div class="l-box-item l-box-shoping">
                            消费日期:@Model.CREATE_DATE.ToString("yyyy.MM.dd HH:mm:ss")
                        </div>
                        <div class="l-box-item l-box-shoping">
                            订单编号:@Model.ORDER_NO
                        </div>
                        <div class="l-box-item l-box-shoping">
                            消费门店:@Model.STORE_NAME
                        </div>
                        <div class="l-box-item l-box-shoping">
                            消费项目:<br />@Html.Raw(Model.PRODUCT_NAME)
                        </div>
                    </div>


                    <div class="l-box">
                        <div class="l-box-title">
                            回访情况
                        </div>
                        <div class="l-box-item l-box-shoping">
                            回访时间:@Model.CREATE_TIME.ToString("yyyy.MM.dd HH:mm:ss")
                        </div>
                        <div class="l-box-item l-box-shoping">
                            回访人:@Model.CREATE_USER_NAME
                        </div>
                    </div>
                </div>

                <!--左侧结束-->
                <div class="col-sm-9">
                    <div class="profile-header">

                        <div id="mainbody1" class="panel panel-primary col-md-12">
                            <div class="panel-heading">
                                <h4 id="h4Dict">订单详情</h4>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive" id="gridlist" style="min-height: 50px">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                         <form class="form-horizontal" id="frmSave" method="post" action="@Url.Action("Save")" role="form">
                    <div class="form-group col-xs-12">
                        <label class="col-sm-2 control-label"><span style="color: red">*</span>操作类型:</label>
                        <div class="col-sm-10">
                         @Html.ResourceDropDownList("TYPE", "FOLLOW_TYPE", Model.TYPE, new { @class = "form-control" }, Model.TYPE.ToString(), false)
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-sm-2 control-label"><span style="color: red">*</span>回访结果:</label>
                        <div class="col-sm-10">
                             @Html.ResourceDropDownList("FOLLOW_RESULT", "FOLLOW_RESULT", Model.TYPE, new { @class = "form-control" }, Model.FOLLOW_RESULT.ToString(), false)
                        </div>
                    </div>

                    <div class="form-group col-xs-12">
                        <label class="col-sm-2 control-label"><span style="color: red">*</span>客户描述:</label>
                         <div class="col-sm-10">
                            @Html.TextArea("CUST_DSC", Model.CUST_DSC, new {  rows = "5", cols="74" })
                        </div>
                        </div>

                    <div class="form-group col-xs-12">
                        <label class="col-sm-2 control-label">备注:</label>
                        <div class="col-sm-10">
                            @Html.TextArea("REMARK", Model.REMARK, new {  cols = "74", rows = "5" })
                        </div>
                    </div>
                              <div  style="margin-top:-10px; text-align:right; padding-right:50px;">
                              <button type="button" id="btnSave" class="btn btn-primary">确 定</button>
                                  </div>

                </form>


                    </div>

                </div>
            </div>
            <!-- contentpanel -->
        </div>
    </div>
</div>

<!--购卡储值续清-->
<div id="confirmModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="frmEdit" method="post" role="form">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;</button>
                    <h4 class="modal-title">购卡/储值/续清<span id="spanEName"></span></h4>
                </div>
                <div>
                    <div>
                    </div>
                    <div class="modal-body">
                        <div id="gridlist">
                            <table id="tCardList">
                                <thead style="background-color: #f7f8fa">
                                    <tr>
                                        @*   <td style="width: 10%">编号</td>*@
                                        <td style="width: 20%">订单号
                                        </td>
                                        <td style="width: 15%">卡级/疗程
                                        </td>
                                        <td style="width: 10%">总金额
                                        </td>
                                        <td style="width: 10%">已付金额
                                        </td>
                                        <td style="width: 10%">欠款金额
                                        </td>
                                        <td style="width: 20%">操作
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-12">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnBuyLCCard" style="float: left;" class="btn btn-green mr5"
                        data-dismiss="modal">
                        购卡</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        取 消</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<!--end-->
@section jssection{
    <script type="text/javascript"> var _utils = {}; var options = {
     queryRightUrl: "@Url.Action("OrderInfo", "Follow")",
 }; </script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog", "app/follow/followpage")
}
