@model SPACRM.Entity.CUST_BOOKING
@section htmlhead{
    @*@Html.Css("pure-min", "common", "glyphicons", "plugin/bdatetimepicker", "plugin/validator", "plugin/dropdown", "plugin/autocomplete")*@
    @Html.Css("plugin/validator")
    <style type="text/css">
        .l-box {
            padding: 2px;
        }

        .l-box-center {
            width: 580px;   
            margin: auto;
            overflow: hidden;
        }

        .btnpanel {
            border-top: #ddd solid 1px;
            text-align: right;
            padding: 10px 55px 10px 0;
            background: #fcfefe;
        }

            .btnpanel button {
                width: 70px;
                text-align: center;
                font-size: 13px;
                margin-right: 10px;
            }

        #cuslist {
            position: absolute;
            z-index: 100;
            top: 150px;
            left: 150px;
            border: solid 1px #ccc;
            background: #fff;
            width: 180px;
            display: none;
        }
    </style>
}
<div id="editpanel" class="pure-g l-box-center">
    <div class="pure-u-1"><a id="abtnclose" href="#" title="关闭" class="abtnclose"><i class="aclose"></i></a></div>
    <div class="pure-u-1" style="clear: both; padding-top: 10px;">
        <form class="pure-form" id="frmEdit" action="@Url.Action("SaveBookingReq")" method="post">
            <fieldset>
                <legend><span class="formlegend">预约登记</span></legend>
                <div>
                    <input type="hidden" name="Idx" id="Idx" value="@Model.ID" />
                    <div class="pure-control-group">
                        <label class="ftip" style="float: left">分店 : </label>
                        @* @if (true)
                            {
                                @Html.ResourceDropDownList("SubBranchId", "SubBranch", Model.STORE_ID, new { style = "width:130px;float:left;margin-left:5px;" }, Model.ParentSubId.ToString(), true)
                            }
                            else
                            {
                                <div style="background-color: #bbe6f8; display: inline-block; padding: 3px 16px; float: left; margin-left:5px; width: 98px;">
                                    @Html.ResourceDisplayText("SubBranch", Model.STORE_ID)
                                    <input type="hidden" id="SubBranchId" name="SubBranchId" value="@Model.STORE_ID" />
                                </div>
                            }*@
                        <label class="ftip" style="float: left; margin-left: 10px;">床位 : </label>
                        @*@Html.ResourceDropDownList("BedId", "Room", Model.BED_ID, new { style = "width:140px;float:left;" }, Model.STORE_ID.ToString(), true)*@
                        <input type="hidden" value="@Model.BED_ID" id="BedName" name="BedName" />
                    </div>
                    <div style="clear: both;"></div>
                    <div class="pure-control-group">
                        <label class="ftip">客户类型 : </label>
                        <select style="width: 130px;" id="UserCardType" name="UserCardType">
                            @* <option value="1" @(Model.UserCardType == 1 ? "selected" : "")>会员</option>
                                <option value="2" @(Model.UserCardType == 2 ? "selected" : "")>体验用户</option>*@
                        </select>

                        <label class="ftip">卡号 : </label>
                        @*@Html.TextBox("UserCard", Model.UserCard, new { style = "width:150px", maxlength = "20" })
                            <input type="hidden" value="@Model.MemberId" name="MemberId" id="MemberId" />*@
                    </div>

                    <div class="pure-control-group">
                        <label class="ftip">电话 : </label>
                        @Html.TextBox("MobilePhone", Model.CUST_MOBILE, new { style = "width:130px", maxlength = "20" })

                        <label class="ftip">姓名 : </label>
                        @Html.TextBox("UserFullName", Model.CUST_NAME, new { style = "width:150px", maxlength = "50" })
                    </div>
                    @* <div class="pure-control-group" id="idinfopanel" style="@(Model.UserCardType!=2?"display:none;":"")">*@
                    <div class="pure-control-group" id="idinfopanel" style="@(2 == 2 ? "display:none;" : "")">
                        <label class="ftip">身份证 : </label>
                        @*@Html.TextBox("IdCard", Model.IdCard, new { style = "width:220px;margin-right:10px;", maxlength = "18" })*@
                        <label class="pure-radio" style="display: inline-block; margin-right: 5px;">
                            <input type="radio" name="Gender" id="Gender_Female" value="1" @(1 == 1 ? "checked" : "") />男</label>
                        <label class="pure-radio" style="display: inline-block; margin-right: 5px;">
                            <input type="radio" name="Gender" id="Gender_Male" value="0" @(1 == 0 ? "checked" : "") />女</label>
                    </div>
                    <div class="pure-control-group">
                        <label class="ftip">预约日期 : </label>
                        <input type="text" id="OrderDate" name="OrderDate" value="@((DateTime)Model.CREATE_DATE).ToString("yyyy-MM-dd")" style="width:130px" />
                        <label class="ftip">预约时间 : </label>
                        @* <input type="text" id="OST" name="OST" value="@Model.OST" style="width:50px;" /> -
                            <input type="text" id="OET" name="OET" value="@Model.OET" style="width:50px" />*@
                    </div>
                    <div class="pure-control-group">
                        <label class="ftip">护理项目: </label>
                        @* @Html.ResourceDropDownList("ItemId", "ServiceItem", Model.ItemId, new { style = "width:200px" }, true)*@

                    </div>
                    <div class="pure-control-group">
                        <label class="ftip">&nbsp;</label>
                        @* <label>@Html.CheckBox("CusReqMasseur", Model.CusReqMasseur) 客户指定护理师</label>*@
                        <label class="ftip">护理师 : </label>
                        @* @Html.ResourceDropDownList("MasseurId", "Masseur", Model.MasseurId, new { style = "width:140px" }, Model.SubBranchId.ToString(), true)*@
                    </div>
                    <div class="pure-control-group">
                        <label class="ftip">备注 : </label>
                        @Html.TextArea("Remark", Model.REMARK, new { maxlength = "500", cols = "58", rows = "5" })
                    </div>
                    <input type="hidden" value="0" name="force" id="hdforce" />
                    <input type="hidden" value="@Model.STATUS" name="Status" id="Status" />
                </div>
                <div class="btnpanel">
                    @{
                        string enable = "";
                        if (Model.STATUS.Equals(3))
                        {
                            enable = "disabled";
                        }
                        var display = "none";
                        if (Model.ID > 0 && Model.BEGIN_DATE < DateTime.Now)
                        {
                            display = "inline-block";
                        }
                    }
                    <button type="button" id="btnSave" class="pure-button pure-button-primary" style="width:90px;" @enable>保 存 </button>
                    <button type="button" id="btnNoCome" class="pure-button" style="width:80px; display:@display;" @enable>爽 约 </button>
                    <button type="button" id="btnForceSave" class="pure-button" style="width:80px; display:none;" @enable>预约排队 </button>
                    <button type="button" id="btnCancel" class="pure-button">取 消 </button>
                </div>
            </fieldset>



        </form>
    </div>
</div>
<div id="cuslist" class="pure-menu pure-menu-open">
    <ul>
        <li><a href="#">柯立芝</a></li>
        <li><a href="#">王小帅</a></li>
        <li><a href="#">逻辑能</a></li>
    </ul>
</div>
