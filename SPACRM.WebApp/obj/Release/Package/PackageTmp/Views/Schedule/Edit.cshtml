            </div>
            <div class="form-group col-xs-10">
                <label class="col-xs-4 control-label">星期选择</label>
                <div class="col-xs-8">
                   @Html.ResourceDropDownList("WEEK", "WEEK", null, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-xs-10">
                <label class="col-xs-4 control-label">班次选择</label>
