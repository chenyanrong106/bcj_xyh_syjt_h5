            </div>

            <input type="hidden" id="SCHEDULE_DATE" name="SCHEDULE_DATE" />
            <input type="hidden" id="SCHEDULE_ID" name="SCHEDULE_TYPE" />
            <input type="hidden" id="EMPLOYEE_ID" name="EMPLOYEE_ID" />
        </form>
       
       
    </div>
