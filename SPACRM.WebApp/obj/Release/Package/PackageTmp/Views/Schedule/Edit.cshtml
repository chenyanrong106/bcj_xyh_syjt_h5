                    <select id="selectEmployee" name="selectEmployee" class="selectStyle" multiple="multiple"  size="10" style="width:220px;" >
                    </select>
                    </div>
            </div>
            
            
            <div class="col-xs-6">
                 
                <div class="col-xs-8">
                     <label class="col-xs-8 control-label">已选中人员</label>
                     <select id="selectedEmployee" name="selectedEmployee" class="selectStyle" multiple="multiple" size="10"  style="width:220px;">
                    </select>
                    </div>
            </div>

                 
                </div>
            <div class="btnpanel_right">
