@{
    ViewBag.Title = "班次管理";
}

@section htmlhead{
    @Html.Css("plugin/xjgrid", "plugin/xjdailog")
    <link href="~/assets/plugins/jqueryui-timepicker/jquery.ui.timepicker.css" rel="stylesheet" />
    <style type="text/css">
        .s_container {
        }

        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .searchpanel {
            background-color: #f7f8fa;
            /*border: 1px solid #ccc;*/
            padding: 5px 15px;
            margin-left: 10px;
            border-radius: 4px;
        }

            .searchpanel .form-group, .searchpanel .btnpanel_right {
                display: block;
                overflow: hidden;
                zoom: 1;
                margin-bottom: 0px;
            }

                .searchpanel .form-group label {
                    margin-bottom: 4px;
                }

        #mainbody {
            margin: 5px 15px;
            background-color: #fff;
        }
    </style>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-cog"></i>&nbsp;班次管理</h2>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h4>班次列表</h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <div class="row">
                <div class="col-md-2 form-group">
                    <button type="button" class="btn default" id="btnAdd">
                        <i class="fa fa-plus"></i>&nbsp;新 增</button>
                </div>
                <div class="text-right col-md-10">
                    <form class="form-inline" id="formQuery" method="post" role="form">

                        <div class="form-group">
                            <div>
                                <input name="NAME" maxlength="32" class="form-control" type="text" placeholder="班次名称" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <button class="btn-primary btn"><i class="fa fa-search"></i>查询</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-12">
                    <div class="table-responsive" id="gridlist">
                    </div>
                </div>
            </div>
        </div>
        <div id="confirmModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">确认！</h4>
                    </div>
                    <div class="modal-body">
                        <p>你确认要删除[ <span id="lbuserName"></span>]吗？</p>
                        <input id="hdCompanyId" type="hidden" value="" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                        <button type="button" id="btnConfirm" class="btn btn-primary">确 定</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

        <!-- Modal -->

        <div id="EditModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">班次信息维护</h4>
                    </div>

                    <div class="modal-body col-xs-12" id="EditModelData">
                        <form id="frmSave" method="post" action="@Url.Action("Save")" role="form">
                            <input id="SCHID" type="hidden" name="ID" />
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-xs-2 control-label" for="ORG_NAME">班次名称：</label>
                                    <div class="col-xs-8">
                                        @Html.TextBox("NAME", null, new { @class = "form-control", placeholder = "请输入班次名称",maxlength="32" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-xs-2 control-label" for="ORG_NAME">代表颜色：</label>
                                    <div class="col-xs-8">
                                        <div id="divColor" class="input-group color cpicker" data-color="#000000">

                                            <input id="COLOR" name="COLOR" type="text" readonly="readonly" class="form-control" data-color-format="hex" value="#000000">

                                            <span class="input-group-addon"><i style="margin-left: 8px;"></i></span>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-xs-2 control-label" for="BRAND">开始时间：</label>
                                    <div class="col-xs-8">
                                        <div class="input-group date" id="begin_picker">
                                            @Html.TextBox("BEGINTIME", null, new { @class = "form-control" })
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label class="col-xs-2 control-label" for="MANAGER">结束时间：</label>
                                    <div class="col-xs-8">
                                        <div class="input-group date" id="end_picker">
                                            @Html.TextBox("ENDTIME", null, new { @class = "form-control" })
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                    <div style="clear: both"></div>
                    <div class="modal-footer">
                        <button type="reset" id="btnCancel" class="btn btn-default" data-dismiss="modal">取 消  </button>
                        <button type="button" id="btnSave" class="btn btn-primary">保 存  </button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal -->

    </div>
</div>

@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            listUrl: "@Url.Action("ScheduleSetList")",
            detailUrl: "@Url.Action("ScheduleDetail")",
            editUrl: "@Url.Action("ScheduleSetEdit")",
            deleteUrl: "@Url.Action("ScheduleSetDelete")"
        };
    </script>
        <script type='text/javascript' src='../../assets/plugins/fullcalendar/fullcalendar.min.js'></script>
    <script type='text/javascript' src='../../assets/plugins/jqueryui-timepicker/jquery.ui.timepicker.min.js'></script> 
    <script type='text/javascript' src='../../assets/plugins/form-daterangepicker/daterangepicker.min.js'></script>
    @Html.Js("plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog", "app/schedule/scheduleset")
    <script src="~/assets/plugins/form-colorpicker/js/bootstrap-colorpicker.min.js"></script>
}
