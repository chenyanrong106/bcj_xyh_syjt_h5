@{
    ViewBag.Title = "员工业绩分配";
}
@using SPACRM.Entity.Entities
@model SPACRM.Entity.Entities.ORDER_HEAD_EX
<style>
    .panel-body {
        height: 480px;
        /*overflow: auto;
        overflow-x: hidden;*/
    }

    #tProItems {
        width: 100%;
    }

    #divProItems {
        height: 310px;
        overflow: auto;
        overflow-x: hidden;
    }

    #tProItems thead tr {
        height: 50px;
    }

    #tProItems tbody tr {
        font-size: 12px;
        margin-top: 10px;
        min-height: 30px;
        line-height: 22px;
    }

    #tProItems tbody .tr:hover {
        background-color: #f5f3f3;
        cursor: pointer;
    }

    /*<!--员工-->*/

    div.divcontent ul {
        list-style: none;
        color: #808080;
        height: 400px;
        overflow: auto;
        overflow-x: hidden;
    }

    #divcontent ul li {
        font-size: 12px;
        float: left;
        margin: 5px;
        height: 50px;
        width: 82px;
        background-color: #b3dcd8;
        border: 1px solid #DDF4FA;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        border-radius: 3px;
        -webkit-box-shadow: 0 0 3px #555;
        -moz-box-shadow: 0 0 3px #555;
        box-shadow: 0 0 3px #555;
    }

        #divcontent ul li:hover {
            cursor: pointer;
            background-color: #5089e0;
            color: white;
        }

    .content {
        padding: 3px;
    }

    .text {
        width: 70px;
        text-align: right;
    }

    .inputfirst {
        /*background-color:#d3cdcd;
        border:0px;*/
        /*border:0;*/
        /*border-bottom:1px dashed black;
   background:#fff;*/
    }
</style>
<h2>业绩分配</h2>
<form action="@Url.Action("SaveEmpper")" id="formSave" method="post" role="form">
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>订购项目</h4>
                </div>
                <div class="panel-body">
                    <div class="alert alert-dismissable alert-warning">
                        <b>订单号：</b><span>@Model.ORDER_NO</span><br />
                        <b>订单总额：</b><span>￥@Model.PAYED_AMT</span><br />
                        <b>顾客姓名：</b><span>@Model.CUST_NAME</span>
                    </div>
                    <div id="divProItems">
                        <table id="tProItems" style="width: 100%">
                            <thead>
                                <tr>
                                    <th style="width: 50%"># 项目名称
                                    </th>
                                    <th style="width: 20%">实收金额
                                    </th>
                                    <th style="width: 30%">员工 / 业绩
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in (List<ORDER_DETAIL_EX>)ViewBag.proItemList)
                                {
                                    <tr id="@item.ID" class="tr">
                                        <td>@item.PROD_NAME</td>
                                        <td>￥@item.PAY_AMT.ToString().Trim()</td>
                                        <td>
                                            <table style="width: 100%;">
                                                <tbody>
                                                    @foreach (var ecommonion in item.ecList)
                                                    {
                                                        <tr>
                                                            <td style='width: 60px;'>@ecommonion.EMP_NAME</td>
                                                            <td>￥<input onkeypress='util.keyPress(this)' onkeyup='util.keyUp(this)' onblur='util.onBlur(this)' readonly='true' name='performance' class='text' maxlength='5'  type='text' value='@ecommonion.PERFORMANCE' /></td>
                                                            <td><a onclick="util.DeleteEmp(this,'@ecommonion.EMP_ID')">删除</a><input type='hidden' name='proid' value="@ecommonion.ORDER_DETAIL_ID"><input type='hidden' name='empid' value="@ecommonion.EMP_ID"></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </td>
                                        <td>
                                            <input type="hidden" name="proItemId" value="@item.ID" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="form-group btnpanel_right" id="divBtnSave" style="margin-top: 5px;">
                        <button type="button" id="btnSave" class="btn btn-primary">保存</button>
                        <button type="button" id="btnReturn" class="btn btn-default">返回</button>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4>员工</h4>

                </div>
                <div class="panel-body">
                    <div style="margin-bottom: 5px; width: 280px;">
                        <input type="text" id="EMP_NAME" class="form-control" placeholder="输入姓名/工号检索" />
                    </div>
                    <div id="divcontent" class="divcontent">

                        <ul style="float: left; padding: 2px 0px 2px 2px;" id="ulcontent">
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<input type="hidden" id="lastSelectRow" />
@section jssection{
    <script type="text/javascript">
        var util = {}; var options = {
            listUrl: "@Url.Action("List", "Customer")",
            editUrl: "@Url.Action("Edit")",
            deleteUrl: "@Url.Action("Delete")",
            queryEmployeeBy: "@Url.Action("QueryEmployeeBy", "Common")",
            queryEmployeeByQ: "@Url.Action("QueryEmployeeByQ", "Common")"

        };
    </script>

    @Html.Js("plugins/validator/validator", "app/order/empper")
}




