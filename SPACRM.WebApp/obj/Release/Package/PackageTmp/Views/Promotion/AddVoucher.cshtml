@{
    ViewBag.Title = "代金券发放"; 
}
@model SPACRM.Entity.Entities.PROMOTION_VOUCHER_EX
@section htmlhead{
      @Html.Css("plugin/xjgrid", "plugin/xjdailog", "plugin/validator", "plugin/tip")     
    <link rel='stylesheet' type='text/css' href='../../assets/plugins/form-select2/select2.css' />  
    <script type="text/javascript" src="../../assets/js/less.js"></script>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-tags"></i>&nbsp;代金券发放</h2>
    </div>
    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4></h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <form class="form-horizontal" id="frmSave" action="@Url.Action("SaveVoucherManager")" method="post" role="form">
                @Html.Hidden("STORES_Str")
                @Html.Hidden("SELECT_STORES_Str", "")
                @Html.Hidden("SELECT_STORES_VALUE_Str", Model.SELECT_STORES_VALUE_Str)

                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>号码固定位</label>
                    <div class="col-sm-5">
                        @Html.TextBox("FIX_NO", Model.FIX_NO, new { @class = "form-control", placeholder = "请输入号码固定位" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>起始号码</label>
                    <div class="col-sm-5">
                        @Html.TextBox("StartNo", Model.StartNo, new { @class = "form-control", placeholder = "请输入起始号码" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="FACE_VALUE" class="col-sm-3 control-label"><span style="color: red">*</span>礼券面值</label>
                    <div class="col-sm-5">
                        @Html.TextBox("FACE_VALUE", Model.FACE_VALUE, new { @class = "form-control", placeholder = "请输入礼券面值" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="TotalCount" class="col-sm-3 control-label"><span style="color: red">*</span>新增数量</label>
                    <div class="col-sm-5">
                        @Html.TextBox("TotalCount", Model.TotalCount, new { @class = "form-control", placeholder = "请输入新增数量" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>有效期</label>
                    <div class="col-sm-5">
                        <div class="input-group date" id="INVALID_DATE_picker">
                            @Html.TextBox("INVALID_DATE_Str", Model.INVALID_DATE_Str, new { @class = "form-control" })
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>类型</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("CAN_SALE", "CAN_SALE", 0, null)
                    </div>
                </div>

                <div class="form-group" id="salePriceD">
                    <label for="SALE_PRICE" class="col-sm-3 control-label"><span style="color: red">*</span>销售价格</label>
                    <div class="col-sm-5">
                        @Html.TextBox("SALE_PRICE", Model.SALE_PRICE, new { @class = "form-control", placeholder = "请输入销售价格" })
                    </div>
                    <div class="col-sm-6"></div>
                </div>

                <div class="form-group">
                    <label for="TotalCount" class="col-sm-3 control-label"><span style="color: red">*</span>是否可转让</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("IS_TRANSFER", "YES_NO", 1, null)
                    </div>
                    <div class="col-sm-6"></div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">发放门店</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("YES_NO", "YES_NO", 0, null)
                    </div>
                </div>

                <div class="form-group" id="p1">
                    <label class="col-sm-3 control-label"></label>                     
                    <div class="col-sm-4" id="store_items_div">                       
                        <select class="form-control" id="STORE_ITMES" name="STORE_ITMES">
                        </select>
                    </div>
                    <div class="col-sm-1">
                        <input type="text" id="Count1" name="Count1" value="" class="form-control mask" data-inputmask="'mask':'9999'" placeholder="张数">
                    </div>
                    <div class="col-sm-1">
                        <button type="button" class="btn btn-primary" id="btnAddOneStore">添加</button>
                    </div>
                </div>

                <div class="form-group" id="p2">
                    <label class="col-sm-3 control-label"></label>
                    <div class="col-sm-5">
                        <div id="gridlist1" class="xjgrid">
                            <div class='grid-body'>
                                <div class='grid-body-inner'>
                                    <table id="tableStoreS" style="width: 100%">  
                                         <thead>
                                            <tr class='thead'> 
                                                <td style="width: 60%;">
                                                    <div style="text-align: left;">门店</div>
                                                </td>
                                                <td style="width: 20%;">
                                                    <div style="text-align: left;">张数</div>
                                                </td>
                                                <td style="width: 20%;">
                                                    <div style="text-align: left;">操作</div>
                                                </td>
                                            </tr>
                                        </thead>
                                         <tbody>                                               
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>使用门店</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("USE_STORE", "USE_STORE", 1, null)
                    </div>
                </div>
                <div class="form-group" id="storeS">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>门店选择</label>
                    <div class="col-sm-5">
                        <select id="USER_STORES" name="USER_STORES" multiple style="width: 100%" class="populate"></select>                       
                    </div>                     
                </div>
                 <div class="form-group">
                    <label class="col-sm-3 control-label">备注</label>
                    <div class="col-sm-5">
                         @Html.TextArea("REMARK", Model.REMARK, new { @class = "form-control", placeholder = "备注", maxlength = "500", rows = "5" })
                    </div>                     
                </div>
                
                <div class="modal-footer">
                    <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">取 消</button>
                    <button type="button" id="btnSave" class="btn btn-primary">保 存</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.modal -->
@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            editUrl: "@Url.Action("EditVoucherManager")",
            indexUrl: "@Url.Action("VoucherManager")",
            queryLeftUrl: "@Url.Action("QueryLeft")",
        };
    </script>
    @Html.Js("plugins/validator/validator", "plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog",
    "plugins/form-datepicker/js/bootstrap-datepicker", "plugins/form-datepicker/js/locales/bootstrap-datepicker.zh-CN",
    "app/company/jquery.tree",
            "plugins/form-select2/select2",
    "js/common", "app/promotion/addvoucher")


