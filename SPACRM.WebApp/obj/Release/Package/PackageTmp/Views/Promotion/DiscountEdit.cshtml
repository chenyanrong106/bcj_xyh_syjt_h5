@{
    ViewBag.Title = "微信优惠券编辑"; 
}
@model SPACRM.Entity.ORG_WX_Discount
@section htmlhead{
      @Html.Css("plugin/xjgrid", "plugin/xjdailog", "plugin/validator", "plugin/tip")     
    <link rel='stylesheet' type='text/css' href='../../assets/plugins/form-select2/select2.css' />  
    <script type="text/javascript" src="../../assets/js/less.js"></script>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-tags"></i>&nbsp;微信优惠券编辑</h2>
    </div>
    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4></h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <form class="form-horizontal" id="frmSave" action="@Url.Action("SaveDiscount")" method="post" role="form">
                   @Html.Hidden("ID",Model.ID)
                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>优惠券名称</label>
                    <div class="col-sm-5">
                        @Html.TextBox("Name", Model.Name, new { @class = "form-control", placeholder = "请输入优惠券名称" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>优惠券类型</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("Type", "DiscountType", 1, null)
                    </div>
                </div>
                  <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red"></span>优惠券总张数</label>
                    <div class="col-sm-5">
                        @Html.TextBox("SumNum", Model.SumNum, new { @class = "form-control",type="number", placeholder = "请输入优惠券总张数" })
                    </div>
                </div>
                 <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red"></span>每人可领取张数</label>
                    <div class="col-sm-5">
                        @Html.TextBox("PersonNum", Model.PersonNum, new { @class = "form-control",type="number", placeholder = "请输入每人可领取张数" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red"></span>使用条件（需满足多少金额可用）</label>
                    <div class="col-sm-5">
                        @Html.TextBox("Condition", Model.Condition, new { @class = "form-control",type="number", placeholder = "请输入使用条件" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>优惠券面值类型</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("MoneyType", "MoneyType", 1, null)
                    </div>
                </div>
                 <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red"></span>最小面值</label>
                    <div class="col-sm-5">
                        @Html.TextBox("MinMoney", Model.MinMoney, new { @class = "form-control",type="number", placeholder = "请输入优惠券最小面值" })
                    </div>
                </div>
                 <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>最大面值（固定面值只需填写最小面值）</label>
                    <div class="col-sm-5">
                        @Html.TextBox("MaxMoney", Model.MaxMoney, new { @class = "form-control",type="number", placeholder = "请输入优惠券最大面值" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>优惠券获取类型</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("GetCon", "GetCon", 1, null)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>优惠券有效期类型</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("ValidityType", "ValidityType", 1, null)
                    </div>
                </div>
                  <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red"></span>领取后有效天数(动态结束日期)</label>
                    <div class="col-sm-5">
                        @Html.TextBox("VaildityDays", Model.VaildityDays, new { @class = "form-control",type="number", placeholder = "请输入优惠券领取后有效天数" })
                    </div>
                </div>
                 <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>有效期（固定结束日期）</label>
                    <div class="col-sm-5">
                        <div class="input-group date" id="INVALID_DATE_picker">
                            @Html.TextBox("Validity", Model.Validity, new { @class = "form-control" })
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label"><span style="color: red">*</span>优惠券状态</label>
                    <div class="col-sm-5">
                        @Html.ResourceRadioList("State", "State", 1, null)
                    </div>
                </div>

               

               

                

               

               

               

               
                 <div class="form-group">
                    <label class="col-sm-3 control-label">备注</label>
                    <div class="col-sm-5">
                         @Html.TextArea("Detail", Model.Detail, new { @class = "form-control", placeholder = "备注", maxlength = "500", rows = "5" })
                    </div>                     
                </div>
                
                <div class="modal-footer">
                    <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">取 消</button>
                    <button type="button" id="btnSave" class="btn btn-primary">保 存</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.modal -->
@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            editUrl: "@Url.Action("EditVoucherManager")",
            indexUrl: "@Url.Action("VoucherManager")",
            queryLeftUrl: "@Url.Action("QueryLeft")",
        };
    </script>
    @Html.Js("plugins/validator/validator", "plugins/xjgrid/xjgrid", "plugins/xjdailog/xjdailog",
    "plugins/form-datepicker/js/bootstrap-datepicker", "plugins/form-datepicker/js/locales/bootstrap-datepicker.zh-CN",
    "app/company/jquery.tree",
            "plugins/form-select2/select2",
    "js/common", "app/promotion/discountedit")


