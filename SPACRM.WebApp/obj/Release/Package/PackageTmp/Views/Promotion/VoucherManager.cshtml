@{
    ViewBag.Title = "代金券管理";
    var userType = ViewData["LoginType"] == null ? "" : ViewData["LoginType"].ToString();
}
@model SPACRM.Entity.Entities.PROMOTION_VOUCHER_EX
@section htmlhead{
        @Html.Css("plugin/xjgrid", "plugin/xjdailog", "plugin/validator")         
}
<div class="s_container">
    <div id="page-heading">
        <h2 id="titleA">代金券管理</h2>
    </div>

    <div id="mainbody" class="panel panel-primary">
        <div class="panel-heading">
            <h4 id="titleB">代金券列表
            </h4>
        </div>
        <div class="panel-body" style="min-height: 350px">
            <div class="row">
                <div class="col-md-2 form-group">
                    @if (userType == "0")
                    {
                        <button type="button" class="btn default" id="btnAdd">
                            <i class="fa fa-plus"></i>新 增</button>
                    }
                     <button type="button" class="btn default" id="btnDelete">
                            <i class="fa fa-times-circle"></i>删 除</button>
                </div>
                <div class="text-right col-md-10">
                    <form id="formQuery" class="form-inline" method="post" role="form">
                        <div class="form-group">
                            @Html.ResourceDropDownList("VoucherExpired", "VoucherExpired", "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.ResourceDropDownList("VOUCHER_STATUS", "VOUCHER_STATES", "", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.TextBox("VOUCHER_NO", "", new { @class = "form-control", placeholder = "券号" })
                            <div class="btn-group">
                                <button class="btn-primary btn" id="btnSearch"><i class="fa fa-search"></i>查 询</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-12">
                    <div id="gridlist">
                    </div>
                </div>
            </div>
        </div>

