@{
    ViewBag.Title = "编辑服务项目信息";
    Layout = "~/Views/Shared/_LayoutC.cshtml";
    var orgId = ViewData["ORG_ID"] == null ? "0" : ViewData["ORG_ID"].ToString();
}

@model SPACRM.Entity.ORG_Crowd_Info
@section htmlhead{
    @Html.Css("plugin/validator")
    @Html.Css("plugin/validator", "plugin/xjgrid")
    <style type="text/css">
        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .btnpanel {
            text-align: center;
        }
    </style>
    <script src="~/Assets/ueditor/ueditor.config.js"></script>
<script src="~/Assets/ueditor/ueditor.all.js"></script>
<script src="~/Assets/ueditor/lang/zh-cn/zh-cn.js"></script>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-user"></i>&nbsp;众筹维护</h2>
    </div>
    <div>
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="BASE_INFO" style="overflow: hidden; zoom: 1">
                        <form id="frmEdit" class="form-horizontal" action="@Url.Action("SaveCrowd")" method="post" role="form">
                            @Html.Hidden("ID", Model.ID)
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="NiceName">
                                    昵称:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("NiceName", Model.NiceName, new { @class = "form-control", placeholder = "请输入昵称" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="City">
                                    城市:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("City", Model.City, new { @class = "form-control", placeholder = "请输入副标题" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="Title">
                                    标题:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("Title", Model.Title, new { @class = "form-control", placeholder = "请输入服务英文名称" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="Detail">
                                    描述:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("Detail", Model.Detail, new { @class = "form-control", placeholder = "请输入到店说明" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="MB">
                                    目标:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("MB", Model.MB, new { @class = "form-control",type="number", placeholder = "请输入标签" })
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="TW1">
                                    我的故事:</label>
                                <div class="col-sm-6">
                                    @Html.TextArea("TW1", Model.TW1, new { @class = "ckeditor" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="TW2">
                                    项目信息:</label>
                                <div class="col-sm-6">
                                    @Html.TextArea("TW2", Model.TW2, new { @class = "ckeditor" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="TW3">
                                    进度更新:</label>
                                <div class="col-sm-6">
                                    @Html.TextArea("TW3", Model.TW3, new { @class = "ckeditor" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="TW4">
                                    风险提示:</label>
                                <div class="col-sm-6">
                                    @Html.TextArea("TW4", Model.TW4, new { @class = "ckeditor" })
                                </div>
                            </div>
                            <div class="btnpanel_right">
                                <button type="reset" id="btnCancel" class="btn btn-default">
                                    取 消
                                </button>
                                <button type="button" id="btnSave" class="btn btn-primary">
                                    保 存
                                </button>
                            </div>
                        </form>
                    </div>
                    </div>
                   
                </div>
            </div>
    </div>
</div>
@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            indexUrl: "@Url.Action("Index")",
            Sto_SaveUrl: "@Url.Action("SaveStore")",
            proTypeUrl: "@Url.Action("GetProdTypesById")",
            Sto_QueryUrl: "@Url.Action("ListStore")"
        };
    </script>
    @Html.Js("plugins/validator/validator", "plugins/xjgrid/xjgrid", "plugins/form-datepicker/js/bootstrap-datepicker", "plugins/form-datepicker/js/locales/bootstrap-datepicker.zh-CN", "js/ajaxfileupload", "app/promotion/crowdedit")
}
