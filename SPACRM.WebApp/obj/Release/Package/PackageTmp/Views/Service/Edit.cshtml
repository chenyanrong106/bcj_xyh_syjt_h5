@{
    ViewBag.Title = "编辑服务项目信息";
    Layout = "~/Views/Shared/_LayoutC.cshtml";
    var orgId = ViewData["ORG_ID"] == null ? "0" : ViewData["ORG_ID"].ToString();
}

@model SPACRM.Entity.Entities.PROD_SERVICE_EX
@section htmlhead{
    @Html.Css("plugin/validator")
    @Html.Css("plugin/validator", "plugin/xjgrid")
    <style type="text/css">
        .h_title {
            padding: 5px 15px;
            border-bottom: solid 1px #e6e5e5;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .btnpanel {
            text-align: center;
        }
    </style>
    <script src="~/Assets/ueditor/ueditor.config.js"></script>
<script src="~/Assets/ueditor/ueditor.all.js"></script>
<script src="~/Assets/ueditor/lang/zh-cn/zh-cn.js"></script>
}
<div class="s_container">
    <div id="page-heading">
        <h2>
            <i class="fa fa-user"></i>&nbsp;服务项目维护</h2>
    </div>
    <div>
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>
                    <ul class="nav nav-tabs">
                        <li class="active" id="foundli"><a href="#BASE_INFO" data-toggle="tab">项目基础信息</a></li>
                        <li id="storeli"><a href="#STORE" id="tab_store" data-toggle="tab">适用的门店</a></li>
                    </ul>
                </h4>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="BASE_INFO" style="overflow: hidden; zoom: 1">
                        <form id="frmEdit" class="form-horizontal" action="@Url.Action("Save")" method="post" role="form">
                            @Html.Hidden("ID", Model.ID)
                            @if (string.IsNullOrEmpty(Model.SCATE) && !string.IsNullOrEmpty(Model.BCATE))
                            {
                                @Html.Hidden("BCATE", Model.CATEGORY_ID + "_" + Model.BCATE);
                            }
                            else if (!string.IsNullOrEmpty(Model.SCATE) && !string.IsNullOrEmpty(Model.BCATE))
                            {
                                @Html.Hidden("BCATE", Model.PARENT_ID + "_" + Model.BCATE + Model.CATEGORY_ID + "_" + Model.SCATE);
                            }

                            <input type="hidden" id="ID" name="ID" value="@Model.ID" />
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="NAME">
                                    服务名称:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("NAME", Model.NAME, new { @class = "form-control", placeholder = "请输入服务名称" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="TITLE">
                                    服务副标题:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("TITLE", Model.TITLE, new { @class = "form-control", placeholder = "请输入副标题" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="EN_NAME">
                                    服务名称(英文):</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("EN_NAME", Model.EN_NAME, new { @class = "form-control", placeholder = "请输入服务英文名称" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="DDSM">
                                    到店说明:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("DDSM", Model.DDSM, new { @class = "form-control", placeholder = "请输入到店说明" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="BQ">
                                    标签（多个标签用英文分号隔开）:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("BQ", Model.BQ, new { @class = "form-control", placeholder = "请输入标签" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="SKU">
                                    SKU（服务项目编号）:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("SKU", Model.SKU, new { @class = "form-control", placeholder = "请输入SKU(服务项目编号)" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="CATEGORY_ID">
                                    服务项目大类:</label>
                                <div class="col-sm-6">
                                    @Html.ResourceDropDownList("TYPE", "SER_TYPE", "", new { @class = "form-control" }, orgId, false) @*服务类别*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="CATEGORY_ID">
                                    服务项目小类:</label>
                                <div class="col-sm-6">
                                    <select class="form-control" id="PRO_TYPE" name="SONTYPE">
                                        <option value="">请选择项目所属小类</option>
                                    </select>
                                </div>

                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="PRICE">
                                    单价:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("PRICE", Model.PRICE, new { @class = "form-control", placeholder = "请输入项目单价" })
                                </div>
                            </div>
                             <div class="form-group">
                                <label class="col-sm-2 control-label" for="OldPrice">
                                    原价:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("OldPrice", Model.OldPrice, new { @class = "form-control", placeholder = "请输入项目原价" })
                                </div>
                            </div>
                            <div style="clear: both;">
                            </div>
                            @*<div class="form-group">
                            <label class="col-sm-3 control-label" for="BARCODE">
                                条形码编号:</label>
                            <div class="col-sm-6">
                                @Html.TextBox("BARCODE", Model.BARCODE, new { @class = "form-control", placeholder = "请输入条形码编号" })
                            </div>
                        </div>*@
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="TIME_LEN">
                                    服务时长（分钟）:</label>
                                <div class="col-sm-6">
                                    @Html.TextBox("TIME_LEN", Model.TIME_LEN, new { @class = "form-control", placeholder = "请输入服务时长（分钟）" })
                                </div>
                            </div>
                            @*<div class="form-group">
                            <label class="col-sm-3 control-label" for="BEGIN_DATE">
                                上架时间:</label>
                            <div class="col-sm-6 input-group date" id="begin_picker">
                                @Html.TextBox("BEGIN_DATE", Model.BEGIN_DATE, new { @class = "form-control", placeholder = "请输入上架时间" })
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="END_DATE">
                                下架时间:</label>
                            <div class="col-sm-6 input-group date" id="end_picker">
                                @Html.TextBox("END_DATE", Model.END_DATE, new { @class = "form-control", placeholder = "请输入下架时间" })
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>*@
                            @*<div class="form-group">
                            <label class="col-sm-3 control-label" for="IS_NORMAL">
                                是否常用项目:</label>
                            <div class="col-sm-6">
                                @Html.ResourceRadioList("IS_NORMAL", "YES_NO", string.IsNullOrEmpty(Model.IS_NORMAL.ToString()) ? "" : Model.IS_NORMAL.ToString(), null)
                            </div>
                        </div>*@
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="STATUS">
                                    使用状态:</label>
                                <div class="col-sm-6">
                                    @if (Model.ID == 0)
                                    {
                                        @Html.ResourceRadioList("STATUS", "OPEN_CLOSE", "1", null)
                                    }
                                    else
                                    {
                                        @Html.ResourceRadioList("STATUS", "OPEN_CLOSE", Model.STATUS.ToString(), null)
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="IS_CARDPAY">
                                    是否允许卡付:</label>
                                <div class="col-sm-6">
                                    @if (Model.ID == 0)
                                    {
                                        @Html.ResourceRadioList("IS_CARDPAY", "YES_NO", "1", null)
                                    }
                                    else
                                    {
                                        @Html.ResourceRadioList("IS_CARDPAY", "YES_NO", Model.IS_CARDPAY ? 1 : 0, null)
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="IS_DISCOUNT">
                                    是否享受折扣:</label>
                                <div class="col-sm-6">
                                    @if (Model.ID == 0)
                                    {
                                        @Html.ResourceRadioList("IS_DISCOUNT", "YES_NO", "1", null)
                                    }
                                    else
                                    {
                                        @Html.ResourceRadioList("IS_DISCOUNT", "YES_NO", Model.IS_DISCOUNT ? 1 : 0, null)
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="IS_DISCOUNT">
                                    是否是服务费:</label>
                                <div class="col-sm-6">
                                    @if (Model.ID == 0)
                                    {
                                        @Html.ResourceRadioList("IS_SERVICE_FEE", "YES_NO", 0, null)
                                    }
                                    else
                                    {
                                        int value = 0;
                                        if (Model.IS_SERVICE_FEE.HasValue)
                                        {
                                            value = Model.IS_SERVICE_FEE.Value ? 1 : 0;
                                        }
                                        @Html.ResourceRadioList("IS_SERVICE_FEE", "YES_NO", value, null);
                                    }
                                </div>
                            </div>
                             <div class="form-group">
                            <label for="TopImg" class="col-sm-3 control-label">顶部图片（长方形）</label>
                            <div class="col-sm-3">
                               <div class="col-sm-12 form-group" >
                                <input type="file" name="fTopImg" style="width: 100%;" id="fTopImg" class="input-group-addon btn btn-default btn-file" onclick="FileUpload_onclick('TopImg')" onchange="FileUpload_onselect('TopImg')" />
                            </div>
                                <div class="col-sm-12 form-group">
                                @Html.TextBox("TopImg", @Model.TopImg, new { @style = "width:100%;" })
                            </div>
                            </div>
                             <div class="col-sm-3">
                                <img id="iTopImg" class="img-thumbnail" style="width:80px;"  src="@Model.TopImg" />
                            </div>
                        </div>
                             <div class="form-group">
                            <label for="Img" class="col-sm-3 control-label">封面图片（正方形）</label>
                            <div class="col-sm-3">
                               <div class="col-sm-12 form-group" >
                                <input type="file" name="fBookImg" style="width: 100%;" id="fBookImg" class="input-group-addon btn btn-default btn-file" onclick="FileUpload_onclick('BookImg')" onchange="FileUpload_onselect('BookImg')" />
                            </div>
                                <div class="col-sm-12 form-group">
                                @Html.TextBox("BookImg", @Model.BookImg, new { @style = "width:100%;" })
                            </div>
                            </div>
                             <div class="col-sm-3">
                                <img id="iBookImg" class="img-thumbnail" style="width:80px;"  src="@Model.BookImg" />
                            </div>
                        </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="IS_CARDPAY">
                                    备注:</label>
                                <div class="col-sm-6">
                                    @Html.TextArea("REMARK", Model.REMARK, new { @class = "ckeditor" })
                                </div>
                            </div>
                            <div class="btnpanel_right">
                                <button type="reset" id="btnCancel" class="btn btn-default">
                                    取 消
                                </button>
                                <button type="button" id="btnSave" class="btn btn-primary">
                                    保 存
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane" id="STORE">
                        <div class="row">
                            <form class="form-horizontal" id="frmStore" method="post" role="form">
                                @Html.Hidden("SID", Model.ID)
                                <div class="col-md-12">
                                    <div id="gridlist">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div id="STORE_INFO" style="margin: 5px 0;">
                        </div>
                        <div class="btnpanel">
                            <button type="button" id="btnStoreSave" style="width: 100px;" class="btn btn-primary">保 存</button>
                            <button type="button" id="btnStoreCancel" style="width: 100px;" class="btn btn-default" data-dismiss="modal">返 回</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section jssection{
    <script type="text/javascript">
        var util = {};
        var options = {
            indexUrl: "@Url.Action("Index")",
            Sto_SaveUrl: "@Url.Action("SaveStore")",
            proTypeUrl: "@Url.Action("GetProdTypesById")",
            Sto_QueryUrl: "@Url.Action("ListStore")"
        };
    </script>
    @Html.Js("plugins/validator/validator", "plugins/xjgrid/xjgrid", "plugins/form-datepicker/js/bootstrap-datepicker", "plugins/form-datepicker/js/locales/bootstrap-datepicker.zh-CN", "js/ajaxfileupload", "app/service/edit")
}
